@model List<HotelProject.EntityLayer.Concrete.AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="active-member">
		<div class="table-responsive">
			<table class="table table-xs mb-0">
				<thead>
					<tr>
						<th>Kullanıcı</th>
						<th>Role Ata</th>
						
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.SurName</td>
							<td><a href="/RoleAssing/AssignRole/@item.Id" class="btn btn-warning">Role Ata</a></td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

