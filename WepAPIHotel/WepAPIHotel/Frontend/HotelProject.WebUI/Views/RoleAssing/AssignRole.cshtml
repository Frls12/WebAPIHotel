@model List<HotelProject.WebUI.Models.Role.AssingRoleVİewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Role Atama Sayfası</h1>

<form method="post">
    @for(int i = 0; i<Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId">
            <input type="hidden" asp-for="@Model[i].RoleName">
            <input type="checkbox" asp-for="@Model[i].RoleExits" class="form-check-input">
            <label  class="form-check-label" for="@Model[i].RoleExits">@Model[i].RoleName</label>
        </div>
    }
    <br />
    <button class="btn btn-success">Rolleri güncelle</button>
</form>

