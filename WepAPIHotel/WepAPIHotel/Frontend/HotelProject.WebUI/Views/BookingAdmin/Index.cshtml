@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Misafir</th>
                <th>Giriş Tarihi</th>
                <th>Çıkış Tarihi </th>
                <th>Durum </th>
                <th>Onayla </th>
                <th>İptal Et </th>
                <th>Beklet </th>
                <th>Güncelle </th>
                <th>Detaylar </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <th>@item.Name</th>
                    <th>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</th>
                    <th>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</th>
                    <th><span class="badge badge-primary px-2">@item.Status</span></th>

                    <td><a href="/BookingAdmin/ApprovedReservation/@item.BookingId" class="btn btn-outline-primary">Onayla</a></td>
                    <td><a href="/BookingAdmin/ApprovedCancel/@item.BookingId" class="btn btn-outline-danger">İptal et</a></td>
                    <td><a href="/BookingAdmin/ApprovedWait/@item.BookingId" class="btn btn-outline-warning">Beklet</a></td>
                    <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-outline-info">Güncelle</a></td>
                    <td><a href="/BookingAdmin/UpdateBooking/@item.BookingId" class="btn btn-outline-dark">Detaylar</a></td>
                  
                </tr>
            }
        </tbody>
    </table>
</div>
