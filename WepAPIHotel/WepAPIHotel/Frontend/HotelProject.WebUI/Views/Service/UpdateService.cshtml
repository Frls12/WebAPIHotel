@model UpdateServiceDto
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<form method="post">
    <input type="hidden" asp-for="ServiceId" value="put" />
    <label>Hizmet İkonu</label>
    <input type="text" asp-for="ServiceIcon" class="form-control" />
    <span asp-validation-for="ServiceIcon" class="text-info"></span>
    <br />
    <label>Hizmet Başlıgı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="description" class="form-control" />
    <span asp-validation-for="description" class="text-info"></span>

    <br />

    <button class="btn btn-primary">Hizmeti güncelle</button>
</form>

